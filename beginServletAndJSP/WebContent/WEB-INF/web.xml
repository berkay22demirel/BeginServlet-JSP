<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Hello Servlet</display-name>
  
  <servlet>
  		<servlet-name>HelloServletExample</servlet-name>
  		<servlet-class>HelloExample.HelloServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  		<servlet-name>HelloServletExample</servlet-name>
  		<url-pattern>/HelloServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
  		<servlet-name>ServletLifecycleExample</servlet-name>
  		<servlet-class>ServletLifecycleExample.ServletLifecycle</servlet-class>
  </servlet>
  <servlet-mapping>
  		<servlet-name>ServletLifecycleExample</servlet-name>
  		<url-pattern>/ServletLifecycle</url-pattern>
  </servlet-mapping>
  
  <servlet>
  		<servlet-name>ServletConfigExample</servlet-name>
  		<servlet-class>ServletConfigExample.ConfigExample</servlet-class>
  		
  		<init-param>
  			<param-name>username</param-name>
  			<param-value>Berkay Demirel</param-value>
  		</init-param>
  		<init-param>
  			<param-name>url</param-name>
  			<param-value>https://berkay22demirel.blogspot.com/</param-value>
  		</init-param>
  </servlet>
  <servlet-mapping>
  		<servlet-name>ServletConfigExample</servlet-name>
  		<url-pattern>/ServletConfig</url-pattern>
  </servlet-mapping>
  
</web-app>